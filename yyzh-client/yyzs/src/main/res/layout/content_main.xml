<?xml version="1.0" encoding="utf-8"?>
<com.qc.yyzs.view.MainLinearLayout
    android:id="@+id/rrr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#66708090"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text=""
            android:textSize="32dp"/>
        <ImageView
            android:id="@+id/main_sousuo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_sousuo"/>
        <ImageView
            android:id="@+id/main_shezhi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_shezhi"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></FrameLayout>
    <RadioGroup
        android:background="#66708090"
        android:id="@+id/main_bottom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/mian_botton_music"
            android:text="曲库"
            android:textColor="#f9f6f6"
            android:drawableTop="@drawable/ic_tab_video_selector"
            style="@style/main_bottomstyle"
            />
        <RadioButton
            android:id="@+id/mian_botton_teach"
            android:text="教学"
            android:textColor="#f9f6f6"
            android:drawableTop="@drawable/ic_tab_audio_selector"
            style="@style/main_bottomstyle"

            />
        <RadioButton
            style="@style/main_bottomstyle"
            android:id="@+id/mian_botton_dish"
            android:textColor="#f9f6f6"
            android:text="打碟"
            android:drawableTop="@drawable/ic_tab_netvideo_selector"
            />



    </RadioGroup>



</com.qc.yyzs.view.MainLinearLayout>
