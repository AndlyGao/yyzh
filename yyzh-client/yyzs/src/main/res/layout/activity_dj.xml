<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qc.yyzs.activity.DJActivity">
    <LinearLayout
        android:id="@+id/dj_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#22333333"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/musicdesc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="DJ"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tianjia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tianjia"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_below="@id/dj_top"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <com.qc.yyzs.view.VerticalSeekBar
            android:layout_width="40dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:progress="50"/>

        <com.qc.yyzs.view.XCRoundImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mainbg"/>


        <com.qc.yyzs.view.VerticalSeekBar
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:progress="50"/>

        <com.qc.yyzs.view.XCRoundImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mainbg"/>

        <com.qc.yyzs.view.VerticalSeekBar
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginRight="13dp"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22333333"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="开始"/>
        <Button
            android:id="@+id/qinggu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="轻鼓"/>
        <Button
            android:id="@+id/zhonggu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="重鼓"/>
        <Button
            android:id="@+id/three"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="X"/>
        <Button
            android:id="@+id/four"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Y"/>
        <Button
            android:id="@+id/five"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Q"/>
        <Button
            android:id="@+id/six"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主调"/>
    </LinearLayout>



</LinearLayout>
